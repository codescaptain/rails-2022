<% if current_user %>
  <p>Hello, <%= current_user.email %>!</p>
  <p>
    You have successfully authenticated with OAuth 2.0.
    You can now close this window and return to the application.</p>
  <p>You are [<%= current_user.role %>]</p>
    <br>
    <%= link_to "SignOut", destroy_user_session_path, 'data-turbo-method': :delete %>

<% else %>
  <p>Hello, stranger.</p>
  <%= link_to "SignIN", new_user_session_path %>
  <%= link_to "SignUP", new_user_registration_path %>
<% end %>
